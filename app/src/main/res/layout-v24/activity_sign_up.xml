<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        android:id="@+id/sign_up_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_attendance"
        android:layout_marginTop="@dimen/margin_from_top"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_from_top"
        android:layout_marginEnd="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_top"
        android:layout_marginTop="@dimen/small_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_icon"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="@color/background_color"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
             />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_layout"
        app:layout_constraintTop_toBottomOf="@id/name_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin_from_top"
        android:layout_marginEnd="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_top"
        android:layout_marginTop="@dimen/small_margin_top"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/black"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/email_edit_txt"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="@string/email"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_layout"
        app:layout_constraintTop_toBottomOf="@id/email_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin_from_top"
        android:layout_marginEnd="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_top"
        android:layout_marginTop="@dimen/small_margin_top"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/black"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/phone_edit_txt"
            android:inputType="phone"
            android:maxLines="1"
            android:hint="@string/phone_number"
            android:textColor="@color/black"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_layout"
        android:layout_marginStart="@dimen/margin_from_top"
        android:layout_marginEnd="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_top"
        android:layout_marginTop="@dimen/small_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_layout"
        >

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_shape_bk"
            tools:listitem="@layout/list_item" />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_from_top"
        android:layout_marginEnd="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_top"
        android:layout_marginTop="@dimen/small_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_layout"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="@color/background_color"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/field_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/field"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/black"
         />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level_layout"
        app:layout_constraintTop_toBottomOf="@id/field_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin_from_top"
        android:layout_marginEnd="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_top"
        android:layout_marginTop="@dimen/small_margin_top"
        app:boxBackgroundColor="@color/white"
        android:textColorHint="@color/black"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/level_edit_txt"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/level"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_layout"
        app:layout_constraintTop_toBottomOf="@id/level_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin_from_top"
        android:layout_marginEnd="@dimen/margin_from_top"
        android:layout_marginBottom="@dimen/margin_from_top"
        android:layout_marginTop="@dimen/small_margin_top"
        app:boxBackgroundColor="@color/white"
        app:placeholderText="@string/password"
        android:textColorHint="@color/black"
        app:boxStrokeErrorColor="@color/background_color"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/black"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/background_color"
        
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/password_edit_txt"
            android:inputType="textVisiblePassword"
            android:maxLines="1"
            android:hint="@string/password"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/small_margin_top"
        android:id="@+id/sign_up_layout"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_color"
            android:drawableEnd="@drawable/ic_arrow"
            android:gravity="center"
            android:paddingStart="30dp"
            android:text="@string/sign_up" />
    </RelativeLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/have_account_txt"
        app:layout_constraintTop_toBottomOf="@id/sign_up_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/small_margin_top"
        android:text="@string/i_already_have_an_account"
        android:textColor="@color/black"/>

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/have_account_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/small_padding"
        android:elevation="0.5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>